<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720" prefWidth="1280" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.arzzcorp.barisystem.SystemController">

    <!-- ===== BARRA LATERAL IZQUIERDA (MENÚ) ===== -->
    <left>
        <VBox fx:id="sidebar" alignment="TOP_CENTER" prefWidth="300" spacing="20" style="-fx-background-color: #400814; -fx-padding: 15;">  <!-- Centrado vertical y horizontal -->

            <!-- Espaciador para separar el logo de la parte superior -->
            <Region VBox.vgrow="ALWAYS" maxHeight="10" />

            <!-- Logo centrado -->
            <StackPane alignment="CENTER">  <!-- Contenedor extra para centrado perfecto -->
                <ImageView fx:id="logo" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/logoDark.png" />
                    </image>
                </ImageView>
            </StackPane>

            <Region VBox.vgrow="ALWAYS" maxHeight="10" />

            <!-- Botones del menú -->
            <Button style="-fx-background-color: #5a0b1c; -fx-text-fill: white; -fx-pref-width: 180;" text="Inicio" />
            <Button style="-fx-background-color: #5a0b1c; -fx-text-fill: white; -fx-pref-width: 180;" text="Clientes" />
            <Button style="-fx-background-color: #5a0b1c; -fx-text-fill: white; -fx-pref-width: 180;" text="Ventas" />

            <Region VBox.vgrow="ALWAYS" />

            <!-- Contenedor para login o info de usuario -->
            <HBox fx:id="userBox" alignment="CENTER" spacing="10" />

        </VBox>
    </left>

    <!-- ===== CONTENIDO PRINCIPAL ===== -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f5f5f5;">
            <Label style="-fx-font-size: 24;" text="Bienvenido al Sistema" />
        </StackPane>
    </center>

</BorderPane>
