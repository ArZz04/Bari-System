<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.arzzcorp.barisystem.components.*?>

<?import javafx.scene.shape.Rectangle?>
<?import org.arzzcorp.barisystem.components.generic.MenuSide?>
<?import org.arzzcorp.barisystem.components.generic.ProductRow?>
<?import org.arzzcorp.barisystem.components.generic.Branches?>
<?import org.arzzcorp.barisystem.components.generic.SearchBar?>
<?import org.arzzcorp.barisystem.components.generic.FilterDropdown?>
<?import org.arzzcorp.barisystem.components.generic.AlertBox?>
<?import org.arzzcorp.barisystem.components.generic.TitleProducts?>
<BorderPane prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.arzzcorp.barisystem.SystemController">

    <!-- ===== BARRA LATERAL IZQUIERDA (MENÃš) ===== -->
    <left>
        <VBox fx:id="sidebar" alignment="TOP_CENTER" prefWidth="270" spacing="20" style="-fx-background-color: #400814; -fx-padding: 15;">  <!-- Centrado vertical y horizontal -->

            <!-- Espaciador para separar el logo de la parte superior -->
            <Region maxHeight="10" VBox.vgrow="ALWAYS" />

            <!-- Logo centrado -->
            <StackPane alignment="CENTER">  <!-- Contenedor extra para centrado perfecto -->
                <ImageView fx:id="logo" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/logoDark.png" />
                    </image>
                </ImageView>
            </StackPane>

            <Region maxHeight="10" VBox.vgrow="ALWAYS" />

            <MenuSide fx:id="menuSide" />

            <Region VBox.vgrow="ALWAYS" />

            <!-- Contenedor para iniciar sesion en caso de ser necesario -->
            <LoginBox fx:id="loginBox" />

            <!-- Contenedor para login o info de usuario -->
            <UserBox fx:id="userBox" />

        </VBox>
    </left>

    <!-- ===== CONTENIDO PRINCIPAL ===== -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f5f5f5;" stylesheets="@../barisystem/css/application.css">
            <VBox alignment="TOP_CENTER"  >
                <Label style="-fx-font-size: 24;" text="Precios de Sucursales" />
                <Separator maxWidth="250" minHeight="5" style="-fx-background-color: #400814;" />
                <Branches/>
                <HBox>
                    <SearchBar/>
                    <FilterDropdown/>
                </HBox>
                <AlertBox/>
                <Label style="-fx-font-size: 14;" text="Listado de Productos" />
                <Separator maxWidth="500" minHeight="5" style="-fx-background-color: #400814;" />
                <TitleProducts/>
                <ProductsList/>
            </VBox>
        </StackPane>
    </center>

</BorderPane>
