<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<fx:root type="StackPane" alignment="BOTTOM_RIGHT" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <Button fx:id="sendButton" style="-fx-background-color: #400814; -fx-text-fill: white; -fx-background-radius: 30; -fx-padding: 10 15;">
        <graphic>
            <HBox alignment="CENTER" spacing="5">
                <ImageView fitHeight="15" fitWidth="15" preserveRatio="true">
                    <Image url="@/icons/send.png" />
                </ImageView>
                <Label style="-fx-text-fill: white;" text="Enviar cambios" />
            </HBox>
        </graphic>
    </Button>
</fx:root>